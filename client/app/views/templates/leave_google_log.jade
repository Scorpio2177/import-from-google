div.content.popup
    if events.processing || contacts.processing || photos.processing
        header
        h1.pa2.matop0.biggest.darkbg.center= t('import running')
    else
        header
        h1.pa2.matop0.biggest.darkbg.center= t('import complete')
    div.content.processing
        if syncedGmail
            div.block
                h2= t('gmail account synced')
        if photos.numberPhotos
            div.block
                if photos.processing
                    h2= t('import photo running')
                else
                    h2= t('import photo complete')
                p.help= photos.numberPhotos + t("import amount photos") + photos.total
                div(style="height: 8px; margin-bottom: 1em; border: 1px solid rgba(0,0,0,.12); background: #33A6FF; border-radius: 20px; width: #{(photos.numberPhotos/photos.total) * 100}%")
                for url in photos.error
                    p.help= t("import album failure") + url
        if events.number
            div.block
                if events.processing
                    h2= t('import calendar running')
                else
                    h2= t('import calendar complete')
                p.help= events.number + t("import amount events") + events.total
                div(style="height: 8px; margin-bottom: 1em; border: 1px solid rgba(0,0,0,.12); background: #33A6FF; border-radius: 20px; width: #{(photos.numberPhotos/photos.total) * 100}%")
        if contacts.number
            div.block
                if contacts.processing
                    h2= t('import contact running')
                else
                    h2= t('import contact complete')
                p.help= contacts.number + t("import amount contacts") + contacts.total
                div(style="height: 8px; margin-bottom: 1em; border: 1px solid rgba(0,0,0,.12); background: #33A6FF; border-radius: 20px; width: #{(photos.numberPhotos/photos.total) * 100}%")
        if invalidToken
            div.error=t('invalid token')
            a.btn.btn-secondary#back-button(href="/", target="_top")=t('back to home')


        unless events.processing || contacts.processing || photos.processing
            p.help= t('import success message')
            a.btn.btn-secondary#back-button(href="/", target="_top")=t('back to home')
